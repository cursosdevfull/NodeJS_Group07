{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./cache",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@mocks/*": ["./src/mocks/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
